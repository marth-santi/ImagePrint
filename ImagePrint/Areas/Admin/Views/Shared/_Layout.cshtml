@using ImagePrint.Models;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href='@Url.Action("Index","Home", new { area = "" })'>
                    <span class="btn btn-xs btn-primary" style="color:aqua">
                        <span class="navbar-brand">To Homepage !</span>
                    </span>
                </a>
                <a href='@Url.Action("Login","LoginCustomer", new { area = "" })'>
                    <span class="btn btn-xs btn-info" style="color:aqua">
                        <span class="navbar-brand">Print Image</span>
                    </span>
                </a>
            </div>
            <div class="navbar-collapse collapse">
                @if (Session["admin"] != null)
                {
                    Member admin = (Member)Session["admin"];
                    <ul class="nav navbar-nav sign-in-out">
                        <li style="color:aqua"><a class="nav-item" href="#"><i class="fa-unlock-alt" aria-hidden="true"></i>Wellcome, @admin.UserM</a></li>
                        <li><a class="nav-item" href="@Url.Action("Index", "Customers")"> Manage Customers Info</a></li>
                        <li><a class="nav-item text-danger" href='@Url.Action("LogOut","AdminLogin")'>Sign Out</a></li>
                    </ul>

                }
                else
                {
                    <a href='@Url.Action("Index","AdminLogin")'>
                        <ul class="nav navbar-nav sign-in-out">
                            <li class="btn btn-success">Admin Sign In</li>
                        </ul>
                    </a>
                }
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My Image Print Site</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>