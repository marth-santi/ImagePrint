@using ImagePrint.Models;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href='@Url.Action("Index","Home", new { area = "" })'>
                    <span class="btn-xs btn-primary navbar-brand">
                        <b>To Homepage !</b>
                    </span>
                </a>
                <a href='@Url.Action("Login","LoginCustomer", new { area = "" })'>
                    <span class="btn-xs btn-info navbar-brand">
                        <b>Print Image</b>
                    </span>
                </a>
            </div>
            <div class="navbar-collapse collapse float-right">
                @if (Session["admin"] != null)
                {
                    Member admin = (Member)Session["admin"];
                    <ul class="nav navbar-nav sign-in-out">
                        <li style="color:aqua"><a class="nav-item" href="#"><i class="fa-unlock-alt" aria-hidden="true"></i>Wellcome, @admin.UserM</a></li>
                        <li><a class="nav-item" href="@Url.Action("Index", "Customers")"> Manage Customers Info</a></li>
                        <li><a class="nav-item text-danger btn-danger" href='@Url.Action("LogOut","AdminLogin")'>Sign Out</a></li>
                    </ul>

                }
                else
                {
                    <ul class="nav navbar-nav sign-in-out">
                        <li class="nav-item btn-success"><a href='@Url.Action("Index","AdminLogin")'>Admin Sign In</a></li>
                    </ul>
                }
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My Image Print Site</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>