@model ImagePrint.Models.Order
@{
    ViewBag.Title = "CardDetails";
}

<h2>Get Card Details</h2>
<div>
    @TempData["error"]
</div>

@using (Html.BeginForm("VerifyCard","Payment",FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.OrderId)
    @Html.HiddenFor(model => model.IsComplete)
    <div class="card p-2">
        <div class="form-group">
            <label class="input-group-text control-label col-md-2"> Total cost</label>
            <div class="col-md-10">
                @Session["cost"].ToString()
            </div>
        </div>

        <div class="form-group">
            <label class="input-group-text control-label col-md-2"> Email</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email_Id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email_Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="input-group-text control-label col-md-2"> Credit Card Number</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CreditCardNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CreditCardNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-outline-success btn-block" value="Verify card and Complete print">
            </div>
        </div>
    </div>
}
