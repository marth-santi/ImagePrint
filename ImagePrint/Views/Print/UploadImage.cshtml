@model ImagePrint.Models.Image
@{
    ViewBag.Title = "UploadImage";
}

@if (ViewBag.Image != null)
{
    <div>@ViewBag.Image.ImageName</div>
}

<h2>Upload Image</h2>


@using (Html.BeginForm("UploadImage", "Print", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ImageName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.ImageName, new { htmlAttributes = new { @class = "form-control" } })*@
                <input class="btn btn-default" type="file" name="uploadImg" id="image" />
                @Html.ValidationMessageFor(model => model.ImageName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-warning" />
                <span class="btn btn-success">Go to Payment</span>
            </div>
        </div>

    </div>
}