@model ImagePrint.Models.ViewModels.ImageDetail


<div class="col-md-6 col-lg-4">
    <div class="card">
        <img src="@Url.Content(Model.Image.ImageName)" alt="Image" class="card-img-top img-thumbnail" style="max-width:100%" />
        <div class="card-body">
            <div class="form-group">
                @Html.Label(Path.GetFileNameWithoutExtension(Model.Image.ImageName))
            </div>
            <div class="form-group">
                @Html.Label("Choose Size", htmlAttributes: new { @class = "control-label col" })
                <div class="col">
                    @Html.DropDownListFor(model => model.Size.Size1, (List<SelectListItem>)ViewBag.SizeList, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Size, "Wrong size selected", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
</div>
