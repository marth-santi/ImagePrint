@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid myCarousel">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="carousel-item active ">
                <img class="img-fluid d-block mx-auto" src="~/Content/image/2.jpg" alt="Chania">
                <div class="carousel-caption">
                    <h3>Printing</h3>
                    <p>Save the moment !</p>
                </div>
            </div>

            <div class="carousel-item ">
                <img class="img-fluid d-block mx-auto" src="~/Content/image/3.jpg" alt="Chicago">
                <div class="carousel-caption">
                    <h3>Printing</h3>
                    <p>Always accompanying you!</p>
                </div>
            </div>

            <div class="carousel-item">
                <img class="img-fluid d-block mx-auto" src="~/Content/image/5.jpg" alt="New York">
                <div class="carousel-caption">
                    <h3>Printing</h3>
                    <p>Colorful world!</p>
                </div>
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<div class="jumbotron my-site">
    <h1>My Image Site</h1>
    <p class="lead">My Image Site is a group of people who wants to develop an online site where everyone can upload their photographs and can order them for printing.</p>
    <p><a href='@Url.Action("About", "Home")' class="btn btn-primary btn-lg">About &raquo;</a></p>
</div>

