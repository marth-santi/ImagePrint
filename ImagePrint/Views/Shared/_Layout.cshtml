@using ImagePrint.Models;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/fontawesome")
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="navbar fixed-top navbar-expand-md navbar-dark bg-dark nav-fill">
        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="navbar-toggler-icon"></span>
        </button>

        <img src="~/Content/image/logo.jpg" class="icon-header" />
        <a href='@Url.Action("Index","GoToPrint")'>
            <span class="btn my-btn btn-xs btn-outline-success" style="color:aqua">
                <i class="fa fa-upload" aria-hidden="true" style="font-size:25px; margin-top:7px;"></i>
                <span class="navbar-brand">Go to print !</span>
            </span>
        </a>
        <div class="navbar-collapse collapse mr-auto">
            <ul class="nav navbar-nav ">
                <li class="nav-item nav-link text-decoration-none">@Html.ActionLink("Home", "Index", "Home")</li>
                <li class="nav-item nav-link text-decoration-none">@Html.ActionLink("About", "About", "Home")</li>
                <li class="nav-item nav-link text-decoration-none">@Html.ActionLink("Contact", "Contact", "Home")</li>
            </ul>
            @if (Session["user"] != null)
            {
                Customer cs = (Customer)Session["user"];
                
                <ul class="nav navbar-nav sign-in-out ml-md-auto m-2">
                    <li class="btn btn-danger ml-2">
                        <a class="nav-item" href='@Url.Action("LogOut","LoginCustomer")'>Sign Out</a>
                    </li>
                    <li class="wellcome-text ml-2" style="color:aqua">
                        <i class="fa fa-unlock-alt" aria-hidden="true"></i>Wellcome, @cs.UserCus
                    </li>
                    <li class="btn btn-facebook ml-2"><i class="fa fa-cart-arrow-down" aria-hidden="true"></i></li>
                </ul>
                    
            }
            else
            {
                <ul class="nav navbar-nav sign-in-out ml-md-auto m-2">
                    <li class="btn btn-info btn-sm ml-2">
                        <a class="nav-item nav-link" href='@Url.Action("SignUp","LoginCustomer")'>Sign Up</a>
                    </li>
                    <li class="btn btn-success btn-sm ml-2">
                        <a class="nav-item nav-link" href='@Url.Action("Login","LoginCustomer")'>Sign In</a>
                    </li>
                </ul>
            }
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer id="footer" class="footer-1">
            <div class="main-footer widgets-dark typo-light">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12 col-sm-6 col-md-3">
                            <div class="widget subscribe no-box">
                                <h5 class="widget-title">MyImage Application<span></span></h5>
                                <p>About the company, save beautiful moments about you. </p>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-3">
                            <div class="widget no-box">
                                <h5 class="widget-title">Quick Links<span></span></h5>
                                <ul class="thumbnail-widget">
                                    <li>
                                        <div class="thumb-content"><a href='@Url.Action("SignUp","LoginCustomer")'>Sign Up</a></div>
                                    </li>
                                    <li>
                                        <div class="thumb-content"><a href='@Url.Action("Login","LoginCustomer")'>Sign In</a></div>
                                    </li>
                                    <li>
                                        <div class="thumb-content"><a href='@Url.Action("Index","GoToPrint")'>Go to Print</a></div>
                                    </li>
                                    <li>
                                        <div class="thumb-content"><a href='@Url.Action("About","Home")'>About</a></div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-3">
                            <div class="widget no-box">
                                <h5 class="widget-title">Get Started<span></span></h5>
                                <p>Print and design images according to customers' requirements.</p>
                                <a href='@Url.Action("SignUp","LoginCustomer")' class="btn my-btn">Sign Up Now</a>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-3">

                            <div class="widget no-box">
                                <h5 class="widget-title">Contact Us<span></span></h5>

                                <p><a href="mailto:nguyentam.angel@gmail.com" title="glorythemes">nguyentam.angel@gmail.com</a></p>
                                <p><a href="mailto:nguyentam.angel@gmail.com" title="glorythemes">nguyentam.angel@gmail.com</a></p>
                                <ul class="social-footer2">
                                    <li class=""><a title="youtube" target="_blank" href="https://www.youtube.com/"><i class="fab fa-youtube" style="color: red;"></i></a></li>
                                    <li class=""><a href="https://www.facebook.com/" target="_blank" title="Facebook"><i class="fab fa-facebook" style="color: #055CAD;"></i></a></li>
                                    <li class=""><a href="https://twitter.com" target="_blank" title="Twitter"><i class="fab fa-twitter-square" style="color: #03F3FC;"></i></a></li>
                                    <li class=""><a title="instagram" target="_blank" href="https://www.instagram.com/"><i class="fab fa-instagram" style="color: #FC7203;"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <p class="year">&copy; @DateTime.Now.Year - My Image Application</p>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/fontawesome")
    @RenderSection("scripts", required: false)
</body>
</html>
