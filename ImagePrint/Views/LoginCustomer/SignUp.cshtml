@model ImagePrint.Models.Customer

@{
    ViewBag.Title = "SingUp";
}

<h2 id="text-login">Create a new account</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="input-group-text control-label col-md-2"> First Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.F_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.F_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="input-group-text control-label col-md-2"> Last Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.L_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.L_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="input-group-text control-label col-md-2"> Date Of Birth</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Dob, new { htmlAttributes = new { @class = "form-control", @placeholder = "1900-01-31" } })
                @Html.ValidationMessageFor(model => model.Dob, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="input-group-text control-label col-md-2"> Gender</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Gender, new { htmlAttributes = new { @class = "form-control", @placeholder = "Male/Female" } })
                @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="input-group-text control-label col-md-2"> Phone number</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Phone_No, new { htmlAttributes = new { @class = "form-control", @placeholder = "0909090909" } })
                @Html.ValidationMessageFor(model => model.Phone_No, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="input-group-text control-label col-md-2"> Address</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="input-group-text control-label col-md-2"> <i class="fa fa-user"></i> Username</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserCus, new { htmlAttributes = new { @class = "form-control", @placeholder = "Username" } })
                @Html.ValidationMessageFor(model => model.UserCus, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="input-group-text control-label col-md-2"><i class="fa fa-lock"></i>  Password</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.PassCus, new { htmlAttributes = new { @class = "form-control", @type = "password", @placeholder = "Password" } })
                @Html.ValidationMessageFor(model => model.PassCus, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-primary btn-block" value="Register">
            </div>
        </div>
    </div>
}